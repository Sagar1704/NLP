	private void readInput() {
		try {
			Scanner scanner = new Scanner(new File("input"));

			while (scanner.hasNext()) {
				scanner.nextLine().trim();
			}
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
	}

