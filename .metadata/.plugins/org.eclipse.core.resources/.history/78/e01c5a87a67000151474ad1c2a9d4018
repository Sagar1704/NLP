package sea.nlp.pos;

/**
 * Has the error counts of the tags in the corpus
 * 
 * @author Sagar
 *
 */
public class TagError implements Comparable<WordError> {
	private String word;
	private int errorCount;

	public TagError(String word) {
		this.word = word;
		this.setErrorCount(1);
	}

	public String getWord() {
		return word;
	}

	public void setWord(String word) {
		this.word = word;
	}

	public int getErrorCount() {
		return errorCount;
	}

	public void setErrorCount(int errorCount) {
		this.errorCount = errorCount;
	}

	@Override
	public int compareTo(WordError o) {
		if(this.getErrorCount() > o.getErrorCount())
			return 1;
		else if(this.getErrorCount() < o.getErrorCount())
			return -1;
		return 0;
	}

}
